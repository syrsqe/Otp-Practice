      <div class="card-body">
        <h4 class="card-title">
          <a href="/" onclick="href='/calendar'">
            My Schedule This Week
          </a>
        </h4>

        <div class="card-text ">
          Monday
            <div class="dropdown d-inline-block req-off">
              <button class="btn btn-secondary btn-sm dropdown-toggle " type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Request Cover</button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                <%for(let i = 0; i < workingThisWeek.length; i++){%>
                    <button class="dropdown-item" type="button"><%=workingThisWeek[i]%></button>
                  <%}%>
              </div>
            </div>

        </div><br>
        <div class="card-text ">
          Tuesday
            <div class="dropdown d-inline-block req-off">
              <button class="btn btn-secondary btn-sm dropdown-toggle " type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Request Cover</button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
